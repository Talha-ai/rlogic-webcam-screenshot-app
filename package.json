{
  "name": "rlogic-webcam-screenshot-app",
  "version": "1.0.0",
  "description": "An Electron app that takes webcam screenshots with a hotkey",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "pack": "electron-builder --dir"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.3"
  },
  "build": {
    "appId": "com.yourname.webcamscreenshot",
    "productName": "Webcam Screenshot",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "directories": {
      "output": "dist"
    }
  }
}